<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="149dp"/>
    <TextView
        android:id="@+id/data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="12dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#8C8989"
        android:visibility="gone"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/c"
                android:onClick="onClearClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="C"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#FF9800"

               >
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back"
                android:onClick="onBackClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:drawableStart="@drawable/ic_baseline_backspace_24"
                android:paddingStart="20dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_margin="12dp">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pres"
                android:onClick="onOperatorClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="%"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#FF9800">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divid"
                android:onClick="onOperatorClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="/"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#FF9800">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_7"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="7"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_8"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="8"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_9"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="9"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_mult"
                android:onClick="onOperatorClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="*"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#FF9800">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_4"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="4"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_5"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="5"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_6"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="6"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_sp"
                android:onClick="onOperatorClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="-"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#FF9800">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_1"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="1"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_2"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="2"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_3"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="3"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_sum"
                android:onClick="onOperatorClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="+"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#FF9800">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_A"
                android:onClick="onAllClearClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="AC"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#FF9800">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_0"
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="0"
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_."
                android:onClick="onDigitClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/radius"
                android:text="."
                android:textSize="40dp"
                android:layout_margin="12dp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but_equel"
                android:onClick="onEquelClick"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/equel"
                android:text="="
                android:textSize="40dp"
                android:layout_margin="12dp"

                android:textColor="#FDFDFC">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>